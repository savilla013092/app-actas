{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "lib",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es2018",
        "lib": [
            "es2018"
        ],
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "../node_modules",
        "node_modules"
    ]
}